{
  "manifest_version": 3,
  "name": "SmartKey - Auto-Popup Keyboard",
  "version": "3.0.0",
  "description": "Auto-popup on-screen keyboard with cursor positioning and smart input detection",
  "homepage_url": "https://github.com/Gobd/chrome-virtual-keyboard",
  "icons": {
    "48": "buttons/keyboard_1.png",
    "128": "buttons/keyboard_2.png"
  },
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_icon": {
      "16": "buttons/keyboard_3.png",
      "48": "buttons/keyboard_1.png",
      "128": "buttons/keyboard_2.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["style.css", "options.html", "options/*", "buttons/*", "wasm/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
