{
  "name": "chrome-virtual-keyboard",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "node build.js",
    "build:test": "node build.js --test",
    "watch": "node build.js --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "package": "pnpm run build && cd dist && zip -r ../chrome-virtual-keyboard.zip . -x \".DS_Store\"",
    "test": "pnpm exec playwright test",
    "test:ui": "pnpm exec playwright test --ui",
    "test:headed": "pnpm exec playwright test --headed",
    "test:debug": "pnpm exec playwright test --debug",
    "test:install": "pnpm exec playwright install chromium --with-deps",
    "test:report": "pnpm exec playwright show-report",
    "coverage": "rm -rf coverage && COVERAGE=1 pnpm exec playwright test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.23.0",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "esbuild": "^0.24.2",
    "http-server": "^14.1.1",
    "monocart-coverage-reports": "^2.12.9",
    "prettier": "^3.7.4"
  }
}
